<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="relay" class="org.jocean.ffrelay.FFRelaySD"
        init-method="start"
        destroy-method="stop"
        name="relay${name}">
        <constructor-arg name="name" value="${name}"/>
        <constructor-arg name="sn" value="${sn}"/>
        <constructor-arg name="dest" value="${to}"/>
        <property name="status" ref="status"/>
        <property name="infos" ref="infos"/>
        <property name="destPullUri" value="${dest.pulluri}"/>
        <property name="apiPath" ref="apiPath"/>
    </bean>
    
    <bean class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="ffrelay:name=${name}"    value-ref="relay${name}"/>
            </map>
        </property>
    </bean>
     
</beans>
